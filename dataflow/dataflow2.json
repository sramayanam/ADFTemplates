{
	"name": "dataflow2",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "reviews",
						"type": "DatasetReference"
					},
					"name": "Reviews"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "CallLLM",
					"linkedService": {
						"referenceName": "CallCategorize",
						"type": "LinkedServiceReference"
					}
				}
			],
			"scriptLines": [
				"source(output(",
				"          prompt as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> Reviews",
				"Reviews call(mapColumn(",
				"          prompt",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     output(",
				"          headers as [string,string],",
				"          status as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     format: 'rest',",
				"     store: 'restservice',",
				"     timeout: 30,",
				"     requestInterval: 0,",
				"     queryParameters = [prompt -> prompt],",
				"     httpMethod: 'POST',",
				"     headerColumnName: 'headers',",
				"     bodyColumnName: 'body',",
				"     statusColumnName: 'status',",
				"     addResponseCode: true,",
				"     responseFormat: ['type' -> 'json', 'documentForm' -> 'documentPerLine']) ~> CallLLM"
			]
		}
	}
}